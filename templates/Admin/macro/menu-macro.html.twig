{% macro menu(currentPage) %}
    <header class="flex flex-row justify-between w-full shadow-md">
        <ul class="flex md:flex-row flex-col md:justify-start items-center">
            <li class="p-4 {% if currentPage == 'dashboard' %} border-b-2 border-blue-500 {% endif %}">
                <a href="{{ path('admin.dashboard') }}">
                    Panel administratora
                </a>
            </li>
            <li class="p-4 {% if currentPage == 'users' %} border-b-2 border-blue-500 {% endif %}">
                <a href="{{ path('admin.users') }}">
                    Użytkownicy
                </a>
            </li>
            <li class="p-4 {% if currentPage == 'lessons' %} border-b-2 border-blue-500 {% endif %}">
                <a href="{{ path('admin.lessons') }}">
                    Lekcje
                </a>
            </li>
            <li class="p-4 {% if currentPage == 'reservations' %} border-b-2 border-blue-500 {% endif %}">
                <a href="{{ path('admin.reservations') }}">
                    Rezerwacje
                </a>
            </li>
            <li class="p-4 {% if currentPage == 'config' %} border-b-2 border-blue-500 {% endif %}">
                <a href="{{ path('admin.dashboard') }}">
                    Konfiguracja
                </a>
            </li>
            <li class="p-4">
                <a href="{{ path('dashboard') }}">
                    Mój panel
                </a>
            </li>
        </ul>
        <div class="p-4 align-middle">
            <a class="btn btn--default" href="{{ path('logout') }}">Wyloguj</a>
        </div>
    </header>
{% endmacro %}